<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberFragment" >
    
    
    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/design_bg30_tile"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/hukidasi_frame"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0"
            android:background="@drawable/popup_menu_dlg_frame" >

            <TextView
                android:id="@+id/heallin_room_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="comment"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/heallin_room_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

        </FrameLayout>

        <FrameLayout
            style="@style/CbButtonBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/room_clothes_btn"
                    style="@style/RbButton.Blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="衣裳部屋" />

                <Button
                    android:id="@+id/room_shop_btn"
                    style="@style/RbButton.Blue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ショップ" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
